{
  "server": {
    "port": 3001,
    "host": "0.0.0.0",
    "cors": {
      "origin": ["http://localhost:4200", "http://localhost:3000"],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 1000
    }
  },
  "aya": {
    "modelName": "aya-expanse",
    "baseUrl": "http://localhost:11434",
    "timeout": 30000,
    "maxTokens": 4096,
    "temperature": 0.1,
    "topP": 0.9
  },
  "translation": {
    "supportedLanguages": [
      "en", "ru", "de", "es", "cs", "zh", "fr", "it", "pt", "ja", "ko", "ar", "hi", "tr"
    ],
    "defaultSourceLanguage": "auto",
    "maxTextLength": 5000,
    "batchSize": 10
  },
  "cache": {
    "maxSize": 1000,
    "ttl": 86400000,
    "staleWhileRevalidate": true
  },
  "auth": {
    "jwtSecret": null,
    "jwtExpiresIn": "24h",
    "bcryptRounds": 12,
    "apiKeyLength": 32
  },
  "logging": {
    "level": "info",
    "format": "combined",
    "enableConsole": true,
    "enableFile": true,
    "logDir": "logs",
    "maxFiles": 10,
    "maxSize": "10m"
  }
}